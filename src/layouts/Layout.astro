---
import Footer from "../components/astroFooter.astro";
import Navbar from "../components/astroNavbar.astro";
import Global from "../components/astroGlobal.astro";
import Popups from "../components/astroPopups.astro";
import Preloader from "../components/global/astroPreloader.astro";

export interface Props {
	title: string;
}
const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Petersen IT Services</title>
		<link rel="stylesheet" href="/assets/styles/fonts.css" />
		<link rel="stylesheet" href="/assets/styles/style.css" />
	</head>
	<body class="smooth-scroll">
		<div id="scroll-container">
			<Navbar />
			<slot />
			<Footer client:idle />
			<Global />
		</div>
		<Preloader client:load />
		<Popups client:visible />
	</body>
	<script is:inline src="/assets/scripts/framework.js"></script>
	<script is:inline src="/assets/scripts/script.js"></script>
</html>
<style>
	body {
		background-color: var(--background-primary);
	}
</style>
