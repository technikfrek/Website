---
export interface Props {
	title: string;
	popupID: string;
	debug: boolean;
}

const {title, popupID, debug} = Astro.props;
---

<div class={"popup popup__closer debug__" + debug} id={popupID} data-popup-close={"#" + popupID}>
	<div class="popup__content">
		<div class="popup__header">
			<div class="popup__close-wrapper">
				<button class="popup__close neuInside" data-popup-close={"#" + popupID}>
					<img class="popup__close-icon" src="assets/images/close.png" />
				</button>
			</div>
			<h2 class="popup__title">{title}</h2>
			<div class="popup__body">
				<slot/>
			</div>
		</div>
	</div>
	<!-- <div class="popup__background popup__closer" data-popup-close={"#" + popupID}></div> -->
</div>

<style>
	.debug__true {

		opacity: 1!important;
		visibility: visible!important;
	}
	.popup__background {
		background-color: rgba(0, 0, 0, 0.5);
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 99;
		transition: all 0.3s;
	}
	.popup {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 100;
		transition: all 0.3s;
		opacity: 0;
		visibility: hidden;
		background-color: rgba(0, 0, 0, 0.5);

	}
	.popup.active {
		opacity: 1;
		visibility: visible;
	}
	.popup__content {
		position: relative;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		z-index: 100;
	}
	.popup__header {
		border-radius: 2rem;
		width: 60vw;
		height: 85vh;
		display: flex;
		/* justify-content: space-between;
		align-items: center; */
		padding: 1rem;
		background-color: var(--background-primary);
		flex-direction: column;
	}
	.popup__title {
		margin-top: 8px;
		font-size: 2rem;
		font-weight: 700;
	}
	.popup__close-wrapper {
		position: relative;
		width: 100%;
		
	}
	.popup__close {
		/* background-color: var(--color-primary); */
		background-color: var(--background-primary);

		height: 3rem;
		width: 3rem;
		border-radius: 50%;
		border: none;
		cursor: pointer;
		position: absolute;
		top: .5rem;
		right: .5rem;
	}
	.popup__close-icon {
		width: 1.3rem;
		height: 1.3rem;
		opacity: 0.6;
		transition: all 0.3s ease-in-out;
	}
	.popup__close-icon:hover {
		opacity: 0.9;
		transition: all 0.3s ease-in-out;

	}
	
</style>
