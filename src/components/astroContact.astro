---
export interface Props {
	title: string;
	subtitle: string;
	ID: string;
	companyName: string;
	street: string;
	city: string;
	country: string;
	contactMail: string;
	contactHelpdesk: string;
	contactPhone: string;
	contactPhoneBeautiful: string;
	contactFax: string;
	contactFaxBeautiful: string;
	contactWhatsApp: string;
	contactWhatsAppBeautiful: string;
	facebook: string;
	instagram: string;
	twitter: string;
	linkedin: string;
	xing: string;
	whatsapp: string;
}
const {
	title,
	subtitle,
	ID,
	companyName,
	street,
	city,
	country,
	contactMail,
	contactHelpdesk,
	contactPhone,
	contactPhoneBeautiful,
	contactFax,
	contactFaxBeautiful,
	contactWhatsApp,
	contactWhatsAppBeautiful,
	facebook,
	instagram,
	twitter,
	linkedin,
	xing,
	whatsapp,
} = Astro.props;
---

<section class="contactSection" id={ID}>
	<h2>{title}</h2>
	<div class="contactWrapper">
		<div class="container neuInsideNH">
			<h3>{companyName}</h3>
			<div class="miniSection">
				<h4>{subtitle}</h4>
				<p>{street}</p>
				<p>{city}</p>
				<p>{country}</p>
			</div>
			<h3 style="margin-top: 30px">Kontakt</h3>
			<div class="miniSection contactMiniSection">
				<h4>Mail: <a href={"mailto:" + contactMail}>{contactMail}</a></h4>
				<h4>Helpdesk: <a href={"mailto:" + contactHelpdesk}>{contactHelpdesk}</a></h4>
				<h4>Telefon: <a href={"tel:" + contactPhone}>{contactPhoneBeautiful}</a></h4>
				<h4>Fax: <a href={"tel:" + contactFax}>{contactFaxBeautiful}</a></h4>
				<h4>WhatsApp: <a href={"tel:" + contactWhatsApp}>{contactWhatsAppBeautiful}</a></h4>
			</div>
			<h3 style="margin-top: 30px;">Socials</h3>
			<div class="miniSection socialWrapper">
				<a target="_blank" href={facebook} class="socialIcon neuOutside">
					<img src="assets/images/socials/facebook.svg"/>
				</a>
				<a target="_blank" href={instagram} class="socialIcon neuOutside">
					<img src="assets/images/socials/insta.svg"/>
				</a>
				<a target="_blank" href={twitter} class="socialIcon neuOutside">
					<img src="assets/images/socials/twitter.svg"/>
				</a>
				<a target="_blank" href={linkedin} class="socialIcon neuOutside">
					<img src="assets/images/socials/linkedin.svg"/>
				</a>
				<a target="_blank" href={xing} class="socialIcon neuOutside">
					<img src="assets/images/socials/xing.svg"/>
				</a>
				<a target="_blank" href={whatsapp} class="socialIcon neuOutside">
					<img src="assets/images/socials/whatsapp.svg"/>
				</a>
			</div>
		</div>
	</div>
	<div class="circle1"></div>
	<div class="circle2"></div>
	<div class="blob1 blur"></div>
	<div class="blob2 blur"></div>
	<div class="blob3 blur"></div>
	<div class="blob4 blur"></div>
</section>
<style>
	.contactMiniSection a{
		color: var(--color-primary)!important;
		transition: all 0.1s ease-in-out;
	}
	.contactMiniSection a:hover{
		color: var(--color-primary2)!important;
		transition: all 0.1s ease-in-out;

	}
	.socialIcon img {
		width: 40px;
		height: 40px;
		opacity: 0.9;
		transition: all 0.1s ease-in-out;
	}
	.socialIcon:hover img {
		width: 30px;
		height: 30px;
		opacity: 0.7;
		transition: all 0.1s ease-in-out;
	}
	.socialIcon {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		background-color: var(--background-primary);
		/* box-shadow: inset 8px 8px 12px #d1d9e6, inset -8px -8px 12px #f9f9f9; */
		display: flex;
		justify-content: center;
		align-items: center;
		margin: 10px;
	}
	.miniSection {
		margin-top: 20px;
	}
	.socialWrapper {
		display: flex;
		justify-content: space-evenly;
		align-items: center;
		flex-direction: row;
	}
	h4 {
		margin-top: 0;
	}
	p {
		font-size: 1.2rem;
		font-weight: 400;
		color: #000;
		padding: 0;
	}
	.container {
		border-radius: 20px;
		width: 700px;
		/* height: 400px; */
		padding: 25px;
	}
	.contactWrapper {
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.circle1 {
		position: absolute;
		width: 700px;
		height: 700px;
		border-radius: 50%;
		background-color: var(--background-primary);
		box-shadow: inset 8px 8px 12px #d1d9e6, inset -8px -8px 12px #f9f9f9;
		bottom: 10%;
		left: -20%;
		transition: 1.25s;
		overflow: hidden;
	}
	.circle2 {
		position: absolute;
		width: 700px;
		height: 700px;
		border-radius: 50%;
		background-color: var(--background-primary);
		box-shadow: inset 8px 8px 12px #d1d9e6, inset -8px -8px 12px #f9f9f9;
		top: -20%;
		right: -30%;
		transition: 1.25s;
		overflow: hidden;
	}
	.contactSection {
		width: 100%;
		height: 100vh;
		background-color: var(--background-primary);
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}
	h3 {
		font-size: 2rem;
		font-weight: 500;
		color: #000;
	}
	h2 {
		font-size: 4rem;
		font-weight: 500;
		color: #000;
		margin-top: 50px;
		text-align: center;
		/* margin-bottom: 1rem; */
	}
	section {
		margin-top: 300px;
		margin-bottom: 300px;

	}


	.blob1 {
		position: absolute;
		top: 30vh;
		left: -100px;
		width: 250px;
		height: 150px;
		background-color: rgb(255, 0, 0);
		z-index: 100;
	}
	.blob2 {
		position: absolute;
		top: -20vh;
		left: 2500px;
		width: 300px;
		height: 190px;
		background-color: rgb(255, 196, 0);
		z-index: 100;
	}
	.blob3 {
		position: absolute;
		top: 80vh;
		left: 1500px;
		width: 300px;
		height: 180px;
		background-color: rgb(30, 214, 30);
		z-index: 100;
	}
	.blob4 {
		position: absolute;
		top: 30vh;
		left: 3500px;
		width: 300px;
		height: 150px;
		background-color: rgba(233, 53, 53, 0.781);
		z-index: 100;
	}
</style>
